# lust.service
[Unit]
Description=Lust Image Processing Service
After=network.target
Documentation=https://github.com/biels/lust

[Service]
ExecStart=/usr/local/bin/lust --config-file /etc/lust/config.yaml
WorkingDirectory=/opt/lust
User=lust
Group=lust
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target